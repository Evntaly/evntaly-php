{
    "name": "evntaly/evntaly-php",
    "description": "PHP SDK for the Evntaly event tracking platform",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Evntaly\\": "src/Evntaly/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Evntaly\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Evntaly Team",
            "email": "support@evntaly.com"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": ">=7.2",
        "guzzlehttp/guzzle": "^7.0",
        "ext-json": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0 || ^10.0 || ^12.0"
    },
    "keywords": [
        "evntaly",
        "analytics",
        "events",
        "tracking",
        "user identification",
        "batch processing",
        "php sdk"
    ],
    "suggest": {
        "justinrainbow/json-schema": "For JSON Schema validation of events (^5.2)",
        "ext-openssl": "For encrypting sensitive data fields"
    }
}
